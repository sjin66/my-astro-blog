<BasicLayout
  title={`关于我 | ${SITE_TITLE}`}
  description="Shengtong Jin — 南加州大学计算机硕士，专注前端开发的技术博主。了解我的教育背景、技术栈与项目经历。"
>
  <!-- page container -->
  <div class="min-h-dvh flex flex-col items-center overflow-hidden w-full">
    <!-- about me section -->
    <div
      class="w-full h-dvh flex flex-col items-center align-middle justify-center text-lg text-center px-4 bg-content-background-2"
    >
      <h2
        class="font-train-one text-5xl md:text-6xl lg:text-8xl font-extrabold text-center mb-20"
        data-slot="education-title"
      >
        ABOUT ME
      </h2>
      <BlurText
        text={introduction}
        delay={75}
        animateBy="words"
        direction="top"
        onAnimationComplete={handleAnimationComplete}
        className="text-base md:text-lg lg:text-xl max-w-3xl mx-auto text-left"
        client:load
      />
    </div>
    <!-- education section -->
    <div id="education-section" class="w-full text-lg bg-content-background text-center px-4 pt-20 education-fade-in">
      <div class="flex flex-col max-w-sm lg:max-w-3xl mx-auto" data-slot="education-section">
        <h2
          class="font-title text-2xl text-left mb-8 underline decoration-double decoration-primary"
          data-slot="education-title"
        >
          EDUCATION
        </h2>

        <div class="flex flex-row flex-wrap justify-between w-full" data-slot="education-cards">
          <!-- USC Master Education Card -->
          <EducationCard
            img={uscCampus}
            alt="University Logo"
            degree="Master"
            school="University of Southern California"
            duration="Oct 2021 - May 2023"
            logo={uscLogo}
          />
          <!-- MSU Bachelor Education Card -->
          <EducationCard
            img={msuCampus}
            alt="University Logo"
            degree="Bachelor"
            school="Michigan State University"
            duration="Sep 2018 - May 2022"
            logo={msuLogo}
          />
        </div>
      </div>
    </div>

    <!-- Skills Section -->
    <div class="w-full text-lg bg-content-background-2 text-center px-4 pt-20">
      <div class="flex flex-col max-w-3xl mx-auto" data-slot="education-section">
        <h2
          class="font-title text-2xl text-left mb-8 underline decoration-double decoration-primary"
          data-slot="education-title"
        >
          SKILLS
        </h2>
        <div class="flex flex-row flex-wrap justify-between w-full" data-slot="education-cards">
          <SkillCard title="Frontend" skillData={frontendSkills} />
          <SkillCard title="Others" skillData={otherSkills} />

          <SkillLoop client:load/>
        </div>
      </div>
    </div>
  </div>
</BasicLayout>

<style>
  .education-fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 2s ease-out, transform 2s ease-out;
  }

  .education-fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<!-- Page-level initializer for skill bars (runs once on load) -->
<script>
  window.addEventListener('load', () => {
    // Education section fade in animation
    const educationSection = document.getElementById('education-section');
    if (educationSection) {
      const educationObserver = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
              educationObserver.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.1, rootMargin: '0px 0px -100px 0px' }
      );
      educationObserver.observe(educationSection);
    }

    // Skill bar initialization (snapshot + IntersectionObserver)
    const bars = Array.from(document.querySelectorAll('.skill-bar'));
    console.log('[About] Found bars (snapshot):', bars.length, bars);

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          // debug log entry targets
          if (entry.isIntersecting && entry.target instanceof HTMLElement) {
            const el = entry.target;
            const pct = el.getAttribute('data-percentage');
            console.log('[About] bar in viewport, pct=', pct, el);
            setTimeout(() => {
              if (pct) el.style.width = pct + '%';
            }, 250);
            observer.unobserve(el);
          }
        });
      },
      { threshold: 0.1, rootMargin: '0px 0px -50px 0px' }
    );

    bars.forEach((bar) => observer.observe(bar));
  });
</script>
